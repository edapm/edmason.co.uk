---
import Collection from "../../../layouts/Collection.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("oldblogs");
posts.sort((a, b) => Date.parse(b.data.date) - Date.parse(a.data.date));
---

<Collection
	collection={{
		displayName: "Old Blogs",
		name: "oldblogs",
		namePlural: "Old Blog Posts",
		items: posts,
		custom: ["date", {"links": {"back": "arch"}}],
		classes: "font-serif",
	}}
>
</Collection>
