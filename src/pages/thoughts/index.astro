---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("thoughts");
import niceDate from "../../utils/niceDate.js";
import calculateReadTime from "../../utils/calculateReadTime.js";
---

<Layout>
	<div class="container mx-auto p-4">
		<h1 class="text-4xl font-bold p-4">Thoughts</h1>
		<ul class="list-none">
			{
				posts.map((post) => (
					<li class="p-2 my-4 mx-auto">
						<div class="flex justify-between items-center">
							<a
								class="text-2xl font-semibold hover:underline"
								href={`/thoughts/${post.id}`}
							>
								{post.data.title}
							</a>
							<p class="italic">{niceDate(post.data.date)}</p>
						</div>
					</li>
				))
			}
		</ul>
	</div>
</Layout>
