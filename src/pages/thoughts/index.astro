---
import Collection from "../../layouts/Collection.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("thoughts");
posts.sort((a, b) => Date.parse(b.data.date) - Date.parse(a.data.date));
---

<Collection
	collection={{
		displayName: "Thoughts",
		name: "thoughts",
		namePlural: "Thoughts",
		items: posts,
		custom: ["date", "tags"],
	}}
>
</Collection>
